# Production Environment Variables for Hetzner Deployment
# Copy this file to .env.production and update with your values

# Domain Configuration
ZITADEL_EXTERNAL_DOMAIN=auth.yourdomain.com
VAULT_DOMAIN=vault.yourdomain.com

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_DB_PASSWORD_123
ZITADEL_DB_USER=zitadel
ZITADEL_DB_PASSWORD=CHANGE_THIS_ZITADEL_DB_PASSWORD_456

# Zitadel Configuration
ZITADEL_MASTERKEY=CHANGE_THIS_32_CHARACTER_MASTERKEY_789
ZITADEL_ORG_NAME=My Organization
ZITADEL_ADMIN_USERNAME=admin
ZITADEL_ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD_ABC

# Zitadel Login Client
ZITADEL_LOGIN_CLIENT_USERNAME=login-client
ZITADEL_LOGIN_CLIENT_NAME=Production Login Client
ZITADEL_PAT_EXPIRATION_DATE=2029-01-01T00:00:00Z

# Vault Configuration
VAULT_ROOT_TOKEN=CHANGE_THIS_VAULT_ROOT_TOKEN_XYZ

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_DEF

# Monitoring
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_GHI

# SSL/TLS Configuration
ACME_EMAIL=admin@yourdomain.com

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Notification Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD_JKL

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://saas1.yourdomain.com,https://saas2.yourdomain.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json